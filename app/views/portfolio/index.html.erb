<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.7.1/slick.min.css"/>

<style>
  body{
    background:black;
  }

    .slide{
      width:700px;
      height:340px;
      background:rgb(31,31,31);
      margin-left: 190px;
      cursor: pointer !important;
    }

    .your-class {
      margin-top:100px;
    }

    .slide h1 {
      font-size:70px;
      font-weight: 100;
      color:white;
      font-family: 'Alegreya Sans SC', sans-serif;
      text-align: center;
      margin-top:140px;
      cursor: pointer;
    }

    * {
      outline: none;
    }

    .heading {
      position: absolute;
      top:30px;
      left:0%;
      right:0;
      font-size:20px;
      display: block;
      margin: 0 auto;
      color:white;
      letter-spacing: 2px;
      text-align: center;
      font-family: 'Alegreya Sans SC', sans-serif;

      font-weight: 100;
    }
    
    .slick-dots li {
      display: inline;
      margin: 0 auto;
      background:none;
      font-size:14px;

    }

    .slick-dots li button {
      background:none;
      border:none;
      border-bottom: 2px solid rgba(255,255,255,0.4);
      margin-left: 30px;
      color:white;
      font-size:14px;
      font-family: "Open Sans", sans-serif;
      cursor: pointer;
      width:70px;
      transition: all 300ms ease-in-out;


    }

    .slick-active button {
      border-bottom: 2px solid rgba(255,255,255,1) !important;
      transform: translateY(-10px);

    }
    .slick-dots {
      display: block;
      margin: 0 auto;
      width: 100%;
      text-align: center;
      margin-top:50px;
      margin-left: -50px;
    }

    .footer-instructions {
      opacity: 0;
      transform: translateY(30px);
      animation: footer 600ms ease-in-out forwards 1 0.3s;
    }

    @keyframes footer {
      0%{
        opacity: 0;
        transform: translateY(30px);
      }
      100%{
        opacity: 1;
        transform: translateY(0px);
      }
    }

    .slick-next {
      position: fixed;
      right: 0;
      width:280px;
      height: 400px;
      top:100px;
      border:none;
      opacity: 0;

    }

  .slick-prev {
    position: fixed;
    left: 0;
    width:280px;
    height: 400px;
    top:100px;
    opacity: 0;
    background:none;
    z-index: 999999999999999;

  }

    #tail img {
      filter: invert(100%);
      width:40px;
      height:40px;
      z-index: 999999999999999999999999999999;

    }

  #tail {
    position: absolute;
    float: left;
    z-index: 999999999999999999999999999999;
    pointer-events: none;

  }

    .right, .left {
      opacity: 0;
    }
</style>


