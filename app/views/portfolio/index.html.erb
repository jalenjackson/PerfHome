  <div style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://thumbs.gfycat.com/CriminalShowyCorydorascatfish-max-1mb.gif) center center no-repeat; background-size: cover;" class="slide"><h1>Lorem Ipsum</h1></div>
  <div style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://i.pinimg.com/originals/6f/23/30/6f23300ebc7a006c80f910c2f639f60a.gif) center center no-repeat; background-size: cover;" class="slide"><h1>Lorem Ipsum</h1></div>
  <div style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://i.pinimg.com/originals/ba/6b/10/ba6b10b4dfae0484b1e387dc4140b138.gif) center center no-repeat; background-size: cover;" class="slide"><h1>Lorem Ipsum</h1></div>
  <div style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://i.pinimg.com/originals/00/4c/40/004c4048c8b67ca6d046f4c4812400a7.gif) center center no-repeat; background-size: cover;" class="slide"><h1>Lorem Ipsum</h1></div>


</div>
<div id="tail">
  <img class="left" src="http://homepages.neiu.edu/~jarroyo7/cs300/images/backwardArrow.png"/>
  <img class="right" src="https://maxcdn.icons8.com/Share/icon/p1em/Arrows//long_arrow_right1600.png"/>
</div>

<%= render 'partials/footer' %>


<script type="text/javascript">
    $(document).ready(function(){
        $('.your-class').slick({
            infinite: true,
            slidesToScroll: 1,
            variableWidth: true,
            centerMode: true,
            dots: true

        });

        var timeoutId = 0;

        $('.slide').on('mousedown', function() {

            

            timeoutId = setTimeout(function(){
                alert("he");
            }, 1000);
        }).on('mouseup mouseleave', function() {
            clearTimeout(timeoutId);
        });



        $(".footer-instructions").html("Drag or click to navigate slider");


        $(".slick-next").hover(function(){
            $('#tail').css({
                opacity: "1"
            });
            $(".right").css({
                opacity: "1"
            });
            $(document).bind('mousemove', function(e){
                $('#tail').css({
                    left:  e.pageX + 20,
                    top:   e.pageY
                });
            });
            $("*").css({
                cursor: "none"
            });
        }, function(){
            $("*").css({
                cursor: "auto"
            });
            $('#tail').css({
                opacity: "0"
            });
            $(".right").css({
                opacity: "0"
            });

        });



        $(".slick-prev").hover(function(){
            $('#tail').css({
                opacity: "1"
            });
            $(".left").css({
                opacity: "1"
            });
            $(document).bind('mousemove', function(e){
                $('#tail').css({
                    left:  e.pageX + 20,
                    top:   e.pageY
                });
            });
            $("*").css({
                cursor: "none"
            });
        }, function(){
            $("*").css({
                cursor: "auto"
            });
            $(".left").css({
                opacity: "0"
            });
            $('#tail').css({
                opacity: "0"
            });

        });

    });

</script>
